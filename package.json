{
  "name": "@ruanyf/markdown-it-implicit-figures",
  "version": "1.0.1",
  "description": "Render images occurring by itself in a paragraph as `<figure><img ...></figure>`, similar to pandoc's implicit_figures",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruanyf/markdown-it-implicit-figures.git"
  },
  "author": "Ruan Yifeng <yifeng.ruan@gmail.com> (github.com/ruanyf)",
  "engines": {
    "node": ">=0.10.0"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js"
    }
  },
  "scripts": {
    "build": "rollup --config rollup.config.mjs",
    "test": "npm run build && mocha",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "index.js",
    "demo.js"
  ],
  "homepage": "https://github.com/ruanyf/markdown-it-implicit-figures",
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "img",
    "figure",
    "image",
    "implicit_figures"
  ],
  "devDependencies": {
    "markdown-it": "14.x",
    "mocha": "10.x",
    "rollup": "4.x"
  },
  "tonicExampleFilename": "demo.js",
  "bugs": {
    "url": "https://github.com/ruanyf/markdown-it-implicit-figures/issues"
  }
